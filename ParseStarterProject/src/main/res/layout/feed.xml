<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/userProfileImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/userNameTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userProfileImageView"
        android:layout_toEndOf="@+id/userProfileImageView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/locationTextView"
        android:layout_below="@+id/userNameTextView"
        android:layout_alignLeft="@+id/userNameTextView"
        android:layout_alignStart="@+id/userNameTextView"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photoImageView"
        android:layout_below="@+id/userProfileImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="Like"
        android:id="@+id/likeButton"
        android:layout_below="@+id/photoImageView"
        android:layout_alignLeft="@+id/userProfileImageView"
        android:layout_alignStart="@+id/userProfileImageView"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:background="@drawable/emptyheart"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="Comment"
        android:id="@+id/commentButton"
        android:layout_alignBottom="@+id/likeButton"
        android:layout_toRightOf="@+id/likeButton"
        android:layout_toEndOf="@+id/likeButton"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/comment"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liked"
        android:id="@+id/textView1"
        android:layout_below="@+id/likeButton"
        android:layout_alignLeft="@+id/likeButton"
        android:layout_alignStart="@+id/likeButton"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likedTextView"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:id="@+id/textView"
        android:layout_below="@+id/likedTextView"
        android:layout_alignLeft="@+id/likedTextView"
        android:layout_alignStart="@+id/likedTextView"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentTextView"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:id="@+id/captionText"
        android:layout_below="@+id/commentTextView"
        android:layout_alignLeft="@+id/commentTextView"
        android:layout_alignStart="@+id/commentTextView"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/captionTextView"
        android:layout_below="@+id/captionText"
        android:layout_alignLeft="@+id/captionText"
        android:layout_alignStart="@+id/captionText"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>
</RelativeLayout>