<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.parse.unimelb.ProfileFragment"
    android:id="@+id/content_frame">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/profileImageButton"
        android:layout_gravity="left|top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:cropToPadding="false"
        android:focusable="false"
        android:visibility="visible"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="0dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:id="@+id/usernameTextView"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Edit Profile"
        android:id="@+id/editProfileButton"
        android:layout_gravity="right|top"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:padding="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="postNum"
        android:id="@+id/postNumTextView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="follNum"
        android:id="@+id/followerNumTextView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="folinNum"
        android:id="@+id/followingNumTextView"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posts"
        android:id="@+id/postTextView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followers"
        android:id="@+id/followersTextView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="following"
        android:id="@+id/followingTextView"
        android:layout_gravity="right|top"
        android:layout_marginRight="25dp"
        android:layout_marginTop="65dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/gridView"
        android:layout_gravity="center_horizontal|bottom"
        android:numColumns="3" />
</FrameLayout>
