<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.parse.unimelb.BrowseFragment"
    android:id="@+id/content_frame"
              android:weightSum="1">

    <ListView
        android:id="@+id/browseListView"
        android:layout_width="fill_parent"
        android:layout_height="480dp"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:layout_weight="0.8"
        android:layout_above="@+id/sortLocButton"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Location"
        android:id="@+id/sortLocButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:background="#ffee6b"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Date"
        android:id="@+id/sortDateButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:background="#ffee6b"
        android:clickable="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />



</RelativeLayout>
